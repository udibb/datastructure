<%= form_for(@confirm) do |f| %>
  <% if @confirm.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@confirm.errors.count, "error") %> prohibited this confirm from being saved:</h2>

      <ul>
      <% @confirm.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :user %><br />
    <%= f.text_field :user %>
  </div>
  <div class="field">
    <%= f.label :claim %><br />
    <%= f.text_field :claim %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
